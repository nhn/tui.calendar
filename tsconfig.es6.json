{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist/es6/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/ts/*"]
    },
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["types"],
    "types": ["node", "webpack-env", "jasmine", "karma-fixture"]
  },
  "include": ["types", "src/ts/**/*.ts", "src/ts/**/*.tsx"],
  "exclude": ["node_modules"]
}
