<div class="{{CSS_PREFIX}}month-dayname" style="border-top: {{styles.borderTop}}">
{{#each daynames}}
    <div class="{{CSS_PREFIX}}month-dayname-item"
         style="position: absolute;
                width: {{width}}%;
                left: {{left}}%;
                {{#unless @last}}
                border-right: {{@root.styles.borderLeft}};
                {{/unless}}
                ">
        <span class="{{holiday day}}" style="color: {{color}};">
            {{{monthDayname-tmpl this}}}
        </span>
    </div>
{{/each}}
</div>
<div class="{{CSS_PREFIX}}month-weeks"></div>
