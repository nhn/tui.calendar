.{css-prefix}month
    height: 100%

+prefix-classes(month)
    .dayname
        wh(100%, 42px)
        position: absolute
        font-size: 13px
        border-top: 1px solid #ddd

    .dayname-item
        height: 100%
        padding-right: 11px
        line-height: 42px
        text-align: right

    .weeks
        padding-top: 20px
        height: 100%

    .week-item
        position: relative
        background-color: #fff
        &>div
            height: 100%

    .more
        background-color: #fff
        height: inherit
        min-width: 200px
        min-height: 150px
        border: 1px solid #ddd

    .more-title
        padding: 0 10px
        height: 28px
        line-height: 28px
        font-weight: bold
        font-size: 14px
        background: #f4f4f4
        border-bottom: 1px solid #ddd

    .more-close
        float: right
        outline: 0
        background none
        border: 0
        font-size: 14px

    .more-list
        height: calc(100% - 29px)
        padding: 10px
        overflow-y: auto

    .more-schedule
        margin: 2px
        font-size: 12px
        line-height: 18px
        cursor: pointer
        display: block
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis

    .guide-block
        position: absolute

    .weekday-schedule
        margin-top: 2px

    .creation-guide
        top: 0
        bottom: -1px
        left: -1px
        right: 0
        position: absolute
        z-index: 20
        background-color: rgba(19, 93, 230, 0.1)
        border: 1px solid #135de6

    .guide-focused
        box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2)

    .guide
        position: relative
        padding-left: 3px
        line-height: 18px
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis

    .move-guide
        font-size: 12px
        line-height 18px

    .exceed-left .guide
        margin-left: 0px

    .exceed-right .guide
        margin-right: 0px

    .exceed-right .guide-handle
        display: none

    .guide-handle
        position: absolute
        top: 0
        right: 3px
        width: 6px
        background-position: 3px center
        cursor: col-resize
