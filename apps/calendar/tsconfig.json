{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./types",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@t/*": ["src/types/*"],
      "@stories/*": ["stories/*"]
    },
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["webpack-env", "node", "jest"]
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ]
}
