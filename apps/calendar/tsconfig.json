{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist/es5/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@t/*": ["./types/*"],
      "@stories/*": ["./stories/*"],
      "@test/*": ["./test/*"],
      "preact-markup": ["./types/preact-markup.d.ts"]
    },
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["webpack-env", "node", "jest"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "types/**/*",
  ]
}
