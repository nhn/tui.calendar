{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist/esm/",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@t/*": ["./types/*"],
      "preact-markup": ["./types/preact-markup.d.ts"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "typeRoots": ["types"],
    "types": ["webpack-env"],
    "listEmittedFiles": true,
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*",
  ]
}


